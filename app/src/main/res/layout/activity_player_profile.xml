<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/player__bio_layout"
            tools:background="@color/zergBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".activities.PlayerProfileActivity"
                android:minHeight="250dp"
                android:id="@+id/constraintLayout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:id="@+id/player_bio__header"
                    android:textSize="24sp"
                    app:fontFamily="sans-serif-black"
                    android:textScaleX="@dimen/text_header_scale"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.54"
                    tools:text="Daenerys"/>

            <TextView
                    android:text="@string/player_bio_mock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/player_bio__brief_intro"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__header"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.495"
                    android:gravity="center_horizontal"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/player_bio__photo"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__brief_intro"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    tools:srcCompat="@drawable/ic_person"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"/>

            <TextView
                    tools:text="Mother of Dragons, Breaker of Chains, Khaleesi of the Great Grass Sea, Lady of Dragonstone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/player_bio__full_intro"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__photo"
                    android:visibility="visible"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"/>

            <TextView
                    android:text="Name:"
                    android:layout_width="@dimen/player_bio__first_column_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__name_label"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__full_intro"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:visibility="visible"
                    android:textSize="16sp"/>

            <TextView
                    tools:text="Daenerys Targaryen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__name"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__full_intro"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__name_label"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible"
                    android:textSize="16sp"/>

            <TextView
                    tools:text="Stormborn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__birth"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__birth_label"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"/>

            <TextView
                    android:text="Birth:"
                    android:layout_width="@dimen/player_bio__first_column_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/player_bio__birth_label"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__name_label"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            <TextView
                    android:text="Team:"
                    android:layout_width="@dimen/player_bio__first_column_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/player_bio__team_tag"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__birth_label"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            <TextView
                    tools:text="House Targaryen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__team"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__team_tag"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__birth"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"/>

            <TextView
                    tools:text="1000000$"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__earn"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__earn_tag"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__team"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    tools:text="#1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__wcs_korea_rank"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__wcs_korea_tag"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__earn"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    tools:text="#1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_bio__wcs_circuit_rank"
                    app:layout_constraintStart_toEndOf="@+id/player_bio__wcs_circuit_tag"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__wcs_korea_rank"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:text="Total Earned:"
                    android:layout_width="@dimen/player_bio__first_column_long"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/player_bio__earn_tag"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__team_tag"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            <TextView
                    android:text="WCS Korea:"
                    android:layout_width="@dimen/player_bio__first_column_long"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/player_bio__wcs_korea_tag"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__earn_tag"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            <TextView
                    android:text="WCS Circuit:"
                    android:layout_width="@dimen/player_bio__first_column_long"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/player_bio__wcs_circuit_tag"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player_bio__wcs_korea_tag"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/ic_fang"
                    android:id="@+id/player_bio__race_icon"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/player_bio__brief_intro"
                    app:layout_constraintVertical_bias="1.0"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toStartOf="@+id/player_bio__header"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_zoom"
                    android:id="@+id/player_bio__zoom_icon"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toTopOf="@+id/player_bio__photo"
                    app:layout_constraintEnd_toEndOf="@+id/player_bio__photo"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_person"
            android:id="@+id/player_bio__photo_enlarged"
            android:visibility="gone"
            android:layout_gravity="center"
            android:adjustViewBounds="true"/>
</FrameLayout>