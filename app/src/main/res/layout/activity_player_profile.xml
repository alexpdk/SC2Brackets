<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerProfileActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/text_player_profile_header"
            android:textSize="24sp"
            app:fontFamily="sans-serif-black"
            android:textScaleX="@dimen/text_header_scale"/>

    <TextView
            android:text="@string/player_bio_mock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/text_player_profile_bio"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_player_profile_header"/>
</android.support.constraint.ConstraintLayout>